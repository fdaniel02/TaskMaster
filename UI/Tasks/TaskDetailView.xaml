<UserControl x:Class="UI.Tasks.TaskDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:StateAlias="clr-namespace:Domain.Enums;assembly=Domain"
             xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             xmlns:System="clr-namespace:System;assembly=System.Runtime"
             xmlns:tasks="clr-namespace:UI.Tasks"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />

        <ObjectDataProvider
                x:Key="states"
                MethodName="GetValues"
                ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="StateAlias:ProjectStates" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <ObjectDataProvider
            x:Key="priorities"
            MethodName="GetValues"
            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="StateAlias:ProjectPriorities" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>

    <UserControl.InputBindings>
        <KeyBinding
            Modifiers="Control"
            Key="S"
            Command="{Binding SaveCommand}" />
    </UserControl.InputBindings>

    <Grid Visibility="{Binding Path=ShowDetails, Converter={StaticResource BoolToVisibility}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <TextBox
            Grid.Column="0"
            Grid.Row="0"
            Margin="0 0 5 5"
            Text="{Binding Project.Name, UpdateSourceTrigger=PropertyChanged}" />

        <TextBox
            Grid.Column="0"
            Grid.Row="1"
            Grid.RowSpan="4"
            Margin="0 0 5 5"
            TextWrapping="Wrap"
            AcceptsReturn="True"
            VerticalScrollBarVisibility="Auto"
            Text="{Binding Project.Details, UpdateSourceTrigger=PropertyChanged}" />

        <ComboBox
            Grid.Column="1"
            Grid.Row="0"
            Margin="5 0 0 5"
            ItemsSource="{Binding Source={StaticResource states}}"
            SelectedItem="{Binding Path=Project.State}" />

        <ComboBox
            Grid.Column="1"
            Grid.Row="1"
            Margin="5 0 0 5"
            ItemsSource="{Binding Source={StaticResource priorities}}"
            SelectedItem="{Binding Path=Project.Priority}" />

        <mah:DateTimePicker
            Grid.Column="1"
            Grid.Row="2"
            Margin="5 0 0 5"
            SelectedDateTime="{Binding Project.Deadline}" />

        <TextBox
            Grid.Column="1"
            Grid.Row="3"
            Margin="5 0 0 5"
            Text="{Binding Project.Source}" />

        <mah:DateTimePicker
            Grid.Column="1"
            Grid.Row="4"
            Margin="5 0 0 5"
            IsClockVisible="False"
            IsTodayHighlighted="True"
            SelectedDateFormat="Short"
            IsEnabled="False"
            SelectedDateTime="{Binding Project.Created}" />

        <Grid
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="0,0,5,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Text="{Binding ActionItem, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding
                            Command="{Binding AddActionItemCommand}"
                            Key="Return" />
                    </TextBox.InputBindings>
                </TextBox>
                <Button
                    Content="Add"
                    Grid.Column="1"
                    Command="{Binding AddActionItemCommand}" />
            </Grid>

            <ScrollViewer
                Grid.Column="0"
                Grid.Row="1"
                VerticalScrollBarVisibility="Auto">

                <ItemsControl ItemsSource="{Binding OpenActionItems}">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <CheckBox
                                    IsChecked="False"
                                    CommandParameter="{Binding}"
                                    Command="{
                                        Binding DataContext.ToogleActionItemCommand,
                                        RelativeSource={
                                            RelativeSource AncestorType={x:Type tasks:TaskDetailView}
                                        }
                                    }" />

                                <TextBox
                                    Padding="0"
                                    MinHeight="18"
                                    BorderThickness="0"
                                    Grid.Column="1"
                                    TextWrapping="Wrap"
                                    TextAlignment="Justify"
                                    Text="{Binding Name}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>

            <ScrollViewer
                Grid.Column="1"
                Grid.Row="1"
                VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ClosedActionItems}">

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <CheckBox
                                    IsChecked="True"
                                    CommandParameter="{Binding}"
                                    Command="{
                                        Binding DataContext.ToogleActionItemCommand,
                                        RelativeSource={
                                            RelativeSource AncestorType={x:Type tasks:TaskDetailView}
                                        }
                                    }" />

                                <TextBlock
                                    Grid.Column="1"
                                    TextWrapping="Wrap"
                                    TextAlignment="Justify"
                                    Text="{Binding Name}"
                                    TextDecorations="Strikethrough" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>

                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <ScrollViewer
            Grid.Row="6"
            Grid.ColumnSpan="2"
            VerticalScrollBarVisibility="Auto">

            <ItemsControl ItemsSource="{Binding Comments}">

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Separator
                                Grid.ColumnSpan="2"
                                Style="{StaticResource SeparatorStyle}" />
                            <TextBlock
                                Grid.Row="1"
                                Text="{Binding Created, StringFormat=yyyy-MM-dd HH:mm}" />
                            <TextBox
                                Padding="0"
                                MinHeight="18"
                                BorderThickness="0"
                                Grid.Row="1"
                                Grid.Column="1"
                                TextWrapping="Wrap"
                                TextAlignment="Justify"
                                Text="{Binding Body}"
                                Margin="0,0,5,0" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <TextBox
            Grid.Row="7"
            Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap"
            AcceptsReturn="True">
            <TextBox.InputBindings>
                <KeyBinding
                    Command="{Binding SaveCommand}"
                    Key="Return" />
            </TextBox.InputBindings>
        </TextBox>

        <Button
            Grid.Row="7"
            Grid.Column="1"
            Content="SAVE"
            Command="{Binding SaveCommand}" />
    </Grid>
</UserControl>